<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_ep_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_medium_margin"
        android:layout_marginRight="@dimen/layout_medium_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="@dimen/icon_small_size"
            android:layout_height="@dimen/icon_small_size"
            android:contentDescription="@string/app_name"
            android:gravity="center_vertical"
            android:src="@drawable/ic_password" />

        <com.emptypointer.hellocdut.widget.ClearableEditText
            android:id="@+id/editText_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_medium_margin"
            android:layout_marginRight="@dimen/layout_small_margin"
            android:background="@null"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:hint="@string/hint_input_old_password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:singleLine="true" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/layout_medium_margin"
        android:layout_marginRight="@dimen/layout_medium_margin"
        android:layout_marginTop="@dimen/layout_small_margin"
        android:background="@color/color_ep_deep_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_medium_margin"
        android:layout_marginRight="@dimen/layout_medium_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="@dimen/icon_small_size"
            android:layout_height="@dimen/icon_small_size"
            android:contentDescription="@string/app_name"
            android:gravity="center_vertical"
            android:src="@drawable/ic_password" />

        <com.emptypointer.hellocdut.widget.ClearableEditText
            android:id="@+id/editText_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_medium_margin"
            android:layout_marginRight="@dimen/layout_small_margin"
            android:background="@null"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:hint="@string/hint_input_new_password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:singleLine="true" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/layout_medium_margin"
        android:layout_marginRight="@dimen/layout_medium_margin"
        android:layout_marginTop="@dimen/layout_small_margin"
        android:background="@color/color_ep_deep_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_medium_margin"
        android:layout_marginRight="@dimen/layout_medium_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="@dimen/icon_small_size"
            android:layout_height="@dimen/icon_small_size"
            android:contentDescription="@string/app_name"
            android:gravity="center_vertical"
            android:src="@drawable/ic_password" />

        <com.emptypointer.hellocdut.widget.ClearableEditText
            android:id="@+id/editText_password_2nd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_medium_margin"
            android:layout_marginRight="@dimen/layout_small_margin"
            android:background="@null"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:hint="@string/hint_confirm_new_password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:singleLine="true" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/layout_medium_margin"
        android:layout_marginRight="@dimen/layout_medium_margin"
        android:layout_marginTop="@dimen/layout_small_margin"
        android:background="@color/color_ep_deep_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_small_margin"></RelativeLayout>

    <Button
        android:id="@+id/button_register"
        style="@style/ep_blue_button_style"
        android:onClick="onSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_medium_margin"
        android:layout_marginRight="@dimen/layout_medium_margin"
        android:layout_marginTop="@dimen/layout_small_margin"
        android:text="@string/str_modify_password" />

</LinearLayout>