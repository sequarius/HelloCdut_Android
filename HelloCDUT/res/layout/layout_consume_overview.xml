<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/color_ep_white"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/layout_medium_margin"
            android:layout_marginLeft="@dimen/layout_large_margin"
            android:layout_marginTop="@dimen/layout_medium_margin"
            android:text="餐费支出"
            android:textSize="@dimen/font_medium_size" />

        <TextView
            android:id="@+id/textView_meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_large_margin"
            android:textColor="@color/color_ep_font_gray" />
    </RelativeLayout>

    <include layout="@layout/view_underline_with_margin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ep_white"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/layout_medium_margin"
            android:layout_marginLeft="@dimen/layout_large_margin"
            android:layout_marginTop="@dimen/layout_medium_margin"
            android:text="沐浴支出"
            android:textSize="@dimen/font_medium_size" />

        <TextView
            android:id="@+id/textView_shower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_large_margin"
            android:textColor="@color/color_ep_font_gray" />
    </RelativeLayout>

    <include layout="@layout/view_underline_with_margin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ep_white"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/layout_medium_margin"
            android:layout_marginLeft="@dimen/layout_large_margin"
            android:layout_marginTop="@dimen/layout_medium_margin"
            android:text="购物支出"
            android:textSize="@dimen/font_medium_size" />

        <TextView
            android:id="@+id/textView_shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_large_margin"
            android:textColor="@color/color_ep_font_gray" />
    </RelativeLayout>

    <include layout="@layout/view_underline_with_margin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ep_white"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/layout_medium_margin"
            android:layout_marginLeft="@dimen/layout_large_margin"
            android:layout_marginTop="@dimen/layout_medium_margin"
            android:text="公交支出"
            android:textSize="@dimen/font_medium_size" />

        <TextView
            android:id="@+id/textView_bus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_large_margin"
            android:textColor="@color/color_ep_font_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/color_ep_white"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/layout_medium_margin"
            android:layout_marginLeft="@dimen/layout_large_margin"
            android:layout_marginTop="@dimen/layout_medium_margin"
            android:text="总计"
            android:textSize="@dimen/font_medium_size" />

        <TextView
            android:id="@+id/textView_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_large_margin"
            android:textColor="@color/color_ep_font_gray" />
    </RelativeLayout>

</LinearLayout>