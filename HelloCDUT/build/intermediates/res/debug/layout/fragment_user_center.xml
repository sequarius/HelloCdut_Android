<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ep_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_user_center_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/selector_white_btn_dress_with_layout"
        android:clickable="true">

        <ImageView
            android:id="@+id/imageView_user_center_avatar"
            android:layout_width="@dimen/icon_large_size"
            android:layout_height="@dimen/icon_large_size"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/layout_large_margin"
            android:layout_marginTop="@dimen/layout_small_margin"
            android:contentDescription="@string/app_name"
            android:paddingBottom="@dimen/layout_small_margin"
            android:src="@drawable/default_avatar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_large_margin"
            android:layout_toRightOf="@id/imageView_user_center_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_medium_size" />

            <TextView
                android:id="@+id/textView_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_xsmall_margin"
                android:text="@string/str_format_user_name"
                android:textColor="@color/color_ep_font_gray" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_user_center_relative_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/selector_white_btn_dress_with_layout"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon_small_size"
            android:layout_height="@dimen/icon_small_size"
            android:layout_marginBottom="@dimen/layout_medium_margin"
            android:layout_marginLeft="@dimen/layout_large_margin"
            android:layout_marginTop="@dimen/layout_medium_margin"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_relative_account" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_medium_margin"
            android:text="@string/str_relative_account"
            android:textSize="@dimen/font_medium_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_user_center_user_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/selector_white_btn_dress_with_layout"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon_small_size"
            android:layout_height="@dimen/icon_small_size"
            android:layout_marginBottom="@dimen/layout_medium_margin"
            android:layout_marginLeft="@dimen/layout_large_margin"
            android:layout_marginTop="@dimen/layout_medium_margin"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_collection" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_medium_margin"
            android:text="@string/str_collection"
            android:textSize="@dimen/font_medium_size" />
    </LinearLayout>

    <!-- 只是一个有边距的分割线 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ep_white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/layout_medium_margin"
            android:layout_marginRight="@dimen/layout_medium_margin"
            android:background="@color/color_ep_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_user_center_user_exam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white_btn_dress_with_layout"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon_small_size"
            android:layout_height="@dimen/icon_small_size"
            android:layout_marginBottom="@dimen/layout_medium_margin"
            android:layout_marginLeft="@dimen/layout_large_margin"
            android:layout_marginTop="@dimen/layout_medium_margin"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_exam" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_medium_margin"
            android:text="@string/str_exam"
            android:textSize="@dimen/font_medium_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_user_center_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/selector_white_btn_dress_with_layout"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon_small_size"
            android:layout_height="@dimen/icon_small_size"
            android:layout_marginBottom="@dimen/layout_medium_margin"
            android:layout_marginLeft="@dimen/layout_large_margin"
            android:layout_marginTop="@dimen/layout_medium_margin"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_medium_margin"
            android:text="@string/str_setting"
            android:textSize="@dimen/font_medium_size" />
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/temp_project/HelloCDUT/res/layout/fragment_user_center.xml -->