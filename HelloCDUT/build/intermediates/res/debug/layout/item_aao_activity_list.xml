<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_white_btn_dress_with_layout"
    android:orientation="vertical"
    android:padding="@dimen/layout_small_margin">

    <TextView
        android:id="@+id/textView_aao_news_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_medium_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon_x_small_size"
            android:layout_height="@dimen/icon_x_small_size"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_clock" />

        <TextView
            android:id="@+id/textView_aao_news_activity_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/color_ep_font_gray" />
    </LinearLayout>

